generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  session_id    String    @id @default(auto()) @map("_id") @db.ObjectId
  id            String    @unique
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String? // Add this field
  lastName      String? // Add this field
  email         String? // Add this field
  accountOwner  Boolean? // Add this field
  locale        String? // Add this field
  collaborator  Boolean? // Add this field
  emailVerified Boolean? // Add this field
}
